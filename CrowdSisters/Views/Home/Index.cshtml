    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <script>
        const imagenes = [
            'img/ProyectoEcoBeauty.jpg',
            'img/Corto.png',
            'img/p2.jpg'
        ];
        const textos1 = [
            'EcoBeauty -',
            'Monica -',
            'Heart of Fire -'
        ];
            
        const textos2 = [
            'Cosméticos Sostenibles',
            'Cortometraje',
            'El legado de la llama eterna'
        ];
        const dias = [
            '177',
            '93',
            '41'
        ];
        const recaudacion1 = [
            '4.000 €',
            '5.000 €',
            '2.000 €'
        ];
        const recaudacion2 = [
            'DE 35.000 €',
            'DE 9.300 €',
            'DE 6.000 €'
        ];
        let indice = 0;

        function cambiarContenido() {
            // Cambiar imagen
            document.getElementById('imagen').src = imagenes[indice];

            // Cambiar textos
            document.getElementById('texto1').innerText = textos1[indice];
            document.getElementById('texto2').innerText = textos2[indice];
            document.getElementById('dias').innerText = dias[indice];
            document.getElementById('recaudacion1').innerText = recaudacion1[indice];
            document.getElementById('recaudacion2').innerText = recaudacion2[indice];

            // Actualizar índice para el próximo ciclo
            indice = (indice + 1) % imagenes.length; // Ciclo para repetir
        }

        setInterval(cambiarContenido, 4000); // Cambia cada 4 segundos
    </script>
