@model IEnumerable<CrowdSisters.Models.Proyecto>

@{
    ViewData["Title"] = "Lista de Proyectos";
}

<h1>¡Se están impulsando @Model.Count() proyectos!</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-warning">
        <p>@ViewBag.ErrorMessage</p>
        <img src="~/images/no-projects.png" alt="No hay proyectos disponibles" style="width:200px;" />
    </div>
}
else
{
    <div class="project-grid">
        @foreach (var proyecto in Model)
        {
            <div class="project-card">
                <div class="project-image">
                    <img src="@proyecto.UrlFotoEncabezado" alt="@proyecto.Titulo" />
                </div>
                <div class="project-details">
                    <h3>@proyecto.Titulo</h3>
                    <div class="project-status-bar">
                        <span class="days-remaining">@((proyecto.FechaFinalizacion - DateTime.Now).Days) DÍAS</span>
                        <div class="progress-bar">
                            <div class="progress" style="width: @(proyecto.MontoRecaudado / proyecto.MontoObjetivo * 100)%"></div>
                        </div>
                    </div>
                    <div class="project-funding">
                        <span class="amount-raised">@proyecto.MontoRecaudado.ToString("C")</span>
                        de @proyecto.MontoObjetivo.ToString("C")
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .project-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .project-card {
        background-color: #f3e5f5;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: calc(33.333% - 20px);
        max-width: 300px;
        margin-bottom: 20px;
    }

    .project-image img {
        width: 100%;
        height: auto;
    }

    .project-details {
        padding: 15px;
        text-align: center;
    }

        .project-details h3 {
            margin: 0 0 10px;
            color: #4a148c;
        }

    .project-status-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .days-remaining {
        font-weight: bold;
        color: #7b1fa2;
    }

    .progress-bar {
        background-color: #d1c4e9;
        border-radius: 10px;
        height: 5px;
        width: 100px;
        overflow: hidden;
    }

    .progress {
        background-color: #4a148c;
        height: 100%;
    }

    .project-funding {
        font-weight: bold;
        color: #7b1fa2;
    }
</style>
