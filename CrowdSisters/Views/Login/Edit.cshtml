@model CrowdSisters.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/desktop.css" />
    <link rel="stylesheet" href="~/css/proyectos.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <style>
        /* General Layout */
        .edit-user {
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f9f9f9;
            padding: 2rem;
        }

        .container {
            background: #f4eafa;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            max-width: 800px;
            width: 100%;
        }

        .form-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .label {
            font-size: 14px;
            font-weight: 600;
            color: #9057d9;
            display: block !important;
            margin-bottom: 0.5rem;
        }

        .input-field, .select-field {
            width: 100%;
            padding: 0.75rem;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            font-size: 14px;
            margin-bottom: 1rem;
        }

        .select-field {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background: #fff;
        }

        .button-container {
            grid-column: span 2;
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        .submit-button {
            background-color: #9057d9;
            color: white;
            padding: 0.75rem 2rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .imagen-encabezado-wrapper {
            /* margin-left: -14px; */
            /* height: 111px; */
            width: 1554px;
            display: flex;
            flex-direction: column;
            /* align-items: flex-start; */
            justify-content: flex-end;
            padding: 0 0 111px;
            box-sizing: border-box;
            max-width: 101%;
        }

        .cancel-button {
            background-color: transparent;
            color: #9057d9;
            padding: 0.75rem 2rem;
            border: 2px solid #9057d9;
            border-radius: 4px;
            text-decoration: none;
            text-align: center;
        }

        .image-preview-container {
            grid-column: span 2;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            flex-direction: column;
            gap: 1rem;
        }

        .image-preview {
            width: 150px;
            height: 150px;
            border: 2px dashed #ccc;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            cursor: pointer;
            background-size: cover;
            background-position: center;
        }

            .image-preview img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="imagen-encabezado-wrapper">
        <img class="imagenproyecto-icon1" style="object-fit:fill" alt="" src="~/img/EditarProyecto.png" />

        <div class="edit-user">
            <div class="container">
                @using (Html.BeginForm("Edit", "Login", FormMethod.Post, new { @class = "form" }))
                {
                    <div class="form-container">
                        @* Nombre *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.Nombre, "Nombre", new { @class = "label" })
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "input-field", placeholder = "Introduce tu nombre" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "error-message" })
                        </div>

                        @* Primer Apellido *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.PrimerApellido, "Primer Apellido", new { @class = "label" })
                            @Html.TextBoxFor(m => m.PrimerApellido, new { @class = "input-field", placeholder = "Introduce tu primer apellido" })
                            @Html.ValidationMessageFor(m => m.PrimerApellido, "", new { @class = "error-message" })
                        </div>

                        @* Segundo Apellido *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.SegundoApellido, "Segundo Apellido", new { @class = "label" })
                            @Html.TextBoxFor(m => m.SegundoApellido, new { @class = "input-field", placeholder = "Introduce tu segundo apellido" })
                            @Html.ValidationMessageFor(m => m.SegundoApellido, "", new { @class = "error-message" })
                        </div>
                        @*Contrasena*@
                        <div class="form-group">
                            @Html.LabelFor(m => m.Contrasena, new { @class = "label" })
                            @Html.PasswordFor(m => m.Contrasena, new { @class = "input-field", placeholder = "Introduce tu contraseña" })
                            @Html.Hidden("ContrasenaHidden", Model.Contrasena, new { @id = "ContrasenaHidden" })
                        </div>


                        @* Código Postal *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.CodigoPostal, "Codigo Postal", new { @class = "label" })
                            @Html.TextBoxFor(m => m.CodigoPostal, new { @class = "input-field", placeholder = "Introduce tu código postal" })
                            @Html.ValidationMessageFor(m => m.CodigoPostal, "", new { @class = "error-message" })
                        </div>

                        @* DNI *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.DNI, "DNI", new { @class = "label" })
                            @Html.TextBoxFor(m => m.DNI, new { @class = "input-field", placeholder = "Introduce tu DNI" })
                            @Html.ValidationMessageFor(m => m.DNI, "", new { @class = "error-message" })
                        </div>

                        @* Población *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.Poblacion, "Población", new { @class = "label" })
                            @Html.TextBoxFor(m => m.Poblacion, new { @class = "input-field", placeholder = "Introduce tu población" })
                            @Html.ValidationMessageFor(m => m.Poblacion, "", new { @class = "error-message" })
                        </div>

                        @* Dirección *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.Direccion, "Dirección", new { @class = "label" })
                            @Html.TextBoxFor(m => m.Direccion, new { @class = "input-field", placeholder = "Introduce tu dirección" })
                            @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "error-message" })
                        </div>

                        @* Teléfono *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.Telefono, "Telefono", new { @class = "label" })
                            @Html.TextBoxFor(m => m.Telefono, new { @class = "input-field", placeholder = "Introduce tu teléfono" })
                            @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "error-message" })
                        </div>

                        @* País *@
                        <div class="form-group">
                            @Html.LabelFor(m => m.Pais, "Pais", new { @class = "label" })
                            @Html.DropDownListFor(m => m.Pais, new SelectList(new[] { "Argentina", "España" }), new { @class = "input-field select-field" })
                            @Html.ValidationMessageFor(m => m.Pais, "", new { @class = "error-message" })
                        </div>  @{
                            string sRutaImagen = string.IsNullOrEmpty(Model.URLImagenUsuario) ? "https://via.placeholder.com/150" : @Model.URLImagenUsuario;
                        }

                        @* Imagen de Perfil *@
                        <div class="image-preview-container">
                            @Html.LabelFor(m => m.URLImagenUsuario, "Imagen de Perfil", new { @class = "label text-center" })
                            <div class="image-preview">
                                <img id="preview"
                                     src="@sRutaImagen"
                                     alt="Haz clic para cargar una imagen"
                                     onclick="document.getElementById('imageUpload').click();"
                                     style="cursor: pointer; width: 100%; height: 100%; object-fit: cover; border: 2px dashed #ccc;">
                            </div>
                            <input type="file" id="imageUpload" style="display: none;" onchange="previewImage(event)" />
                            @Html.HiddenFor(m => m.URLImagenUsuario)
                        </div>

                        <div class="button-container">
                            <button type="submit" class="submit-button">Guardar cambios</button>
                            <a asp-action="Index" class="cancel-button">Cancelar</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.querySelector('.image-preview');
                output.style.backgroundImage = 'url(' + reader.result + ')';
                document.getElementById('URLImagenUsuario').value = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }

    </script>
</body>
</html>
